
<table border="1">
  <theader> {{!-- Encabezado - th: para negrita --}}
    <th>ID</th>
    <th>Nombre</th>
    <th>Password</th>
    <th>Accion</th>
  </theader>
    {{#each users}}
    <tr> 
      <td>{{id}}</td> 
      <td>{{nombre}}</td> 
      <td>{{password}}</td>
      <td><a class="btn btn-danger" href="/user/delete/{{id}}">Eliminar</a></td>
    </tr>
    {{else}}
    <tr>
      <td colspan="4">No hay mas filas</td>
    </tr>
    {{/each}}
</table>
<BR>
<form action="../user/procesar" method="post">
  <table border="1">
    <theader> {{!-- Encabezado - th: para negrita --}}
      <th>Seleccion</th>
      <th>ID</th>
      <th>Nombre</th>
      <th>Password</th>
      <th>Accion</th>
    </theader>
        {{#each users}}
        <tr> 
          <td>
            <input type="checkbox" name="usuario" value="{{id}}">
          </td> 
          <td>{{id}}</td> 
          <td>{{nombre}}</td> 
          <td>{{password}}</td>   
          <td><a class="btn btn-danger" href="/user/delete/{{id}}">Eliminar</a></td>   
        </tr>
        {{else}}
        <tr>
          <td colspan="4">No hay mas filas</td>
        </tr>
        {{/each}}
  </table>
  <BR>
  <button class="btn btn-success">Enviar</button>
  <BR>
</form>